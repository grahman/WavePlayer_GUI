<Window x:Name="Wndw_AddSong" x:Class="TestArea2.AddSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" >Song Name:</Label>
        <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" >Path: </Label>
        <TextBox x:Name="TxtBox_SongName" Grid.Row ="0" Grid.Column="2" VerticalAlignment="Bottom"/>
        <TextBox x:Name="TxtBox_Path"     Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"></TextBox>
        <Button x:Name="Btn_Browse"      Grid.Row="1"   Grid.Column="3" VerticalAlignment="Center" Click="GMBBrowseButtonClicked" >Browse...</Button>
        <Button x:Name="Btn_Save"       Grid.Row="2"    Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Click="GMBSaveButtonClicked">Save</Button>
    </Grid>
</Window>
